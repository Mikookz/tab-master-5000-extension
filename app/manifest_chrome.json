{
  "name": "__MSG_appName__",
  "short_name": "TM5K",
  "version": "2.9.7",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_page": "options.html",
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "__MSG_appName__"
  },
  "offline_enabled": true,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "unlimitedStorage",
    "downloads"
  ],
  "optional_permissions": ["activeTab", "bookmarks", "history", "management", "<all_urls>"]
}