{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "allowJs": false,
    "resolveJsonModule": true,
    "declaration": false,
    "jsx": "react",
    "baseUrl": "./app/scripts/components",
    "typeRoots" : [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "**app/scripts/**/**/*.ts",
    "**app/scripts/**/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "releases",
    "source_maps"
  ]
}